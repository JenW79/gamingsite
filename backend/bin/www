#!/usr/bin/env node
// backend/bin/www

// Import environment variables
require('dotenv').config();

const { port } = require('../config');

const app = require('../app');
const db = require('../db/models');
const http = require("http");
const setupSockets = require("../socket");

const server = http.createServer(app);
// Check the database connection before starting the app
db.sequelize
  .authenticate()
  .then(() => {
    console.log('ðŸŸ¢ DB connection success! Sequelize is ready to use...');
    return db.sequelize.sync(); //  ensures tables exist
  })
  .then(() => {
    setupSockets(server);
    server.listen(port, () => console.log(`ðŸš€ Listening on port ${port}...`));
  })
  .catch((err) => {
    console.error('ðŸ”¥ Failed to connect to DB or sync:', err);
    process.exit(1);
  });